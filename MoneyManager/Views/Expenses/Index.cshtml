@model IEnumerable<MoneyManager.Entities.ExpenseEntity>

@{
    ViewData["Title"] = "Wydatki";
}

<h2>Lista wydatków</h2>

<form method="GET" class="form-inline mb-2">
    <input type="text" name="name" placeholder="Filtruj po nazwie" class="form-control" />
    <button type="submit" class="btn btn-primary ml-2">Szukaj</button>
</form>

<a class="btn btn-primary" asp-area="" asp-controller="Expenses" asp-action="Add">Dodaj wydatek</a>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Data</th>
            <th>Kategoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name </td>
                <td>@item.Amount zł</td>
                <td>@item.ExpenseDate.ToString("yyyy/MM/dd")</td>
                <td>@item.Category</td>
                <td>
                    <a class="btn btn-default" asp-controller="Expenses" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-danger" asp-controller="Expenses" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
